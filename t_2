#include <iostream>

using namespace std;

class Complex
{
private:
	float real;
	float imaginary;
public:
	Complex() : real(0), imaginary(0)
	{}

	Complex(float rl, float img) : real(rl), imaginary(img)
	{}

	void getComplex();

	void printComplex();
	
	Complex addComplex(Complex c1, Complex c2, Complex result) const;

	Complex subComplex(Complex c1, Complex c2, Complex result) const;

	Complex multiplyComplex(Complex c1, Complex result, int mpl) const;

	Complex divComplex(Complex c1, Complex result, int div) const;
};

void Complex::getComplex()
{
	cout << "Please enter the real part of a complex number:" << endl;
	cin >> real;
	cout << "Please enter the imaginary part of a complex number:" << endl;
	cin >> imaginary;
	cout << endl;
}

void Complex::printComplex()
{
	if (imaginary < 0)
	{
		cout << real << imaginary << "i" << endl;
	} else
	cout << real << "+" << imaginary << "i" << endl;
}

Complex Complex::addComplex(Complex c1, Complex c2, Complex result) const
{
	result.real = c1.real + c2.real;
	result.imaginary = c1.imaginary + c2.imaginary;
	return result;
}

Complex Complex::subComplex(Complex c1, Complex c2, Complex result) const
{
	result.real = c1.real - c2.real;
	result.imaginary = c1.imaginary - c2.imaginary;
	return result;
}

Complex Complex::multiplyComplex(Complex c1, Complex result, int mpl) const
{
	result.real = c1.real*mpl;
	result.imaginary = c1.imaginary*mpl;
	return result;
}

Complex Complex::divComplex(Complex c1, Complex result, int div) const
{
	result.real = c1.real / div;
	result.imaginary = c1.imaginary / div;
	return result;
}

int main()
{
	Complex c1, c2, result;
	int mpl, div;
	c1.getComplex();
	c2.getComplex();
	result = result.addComplex(c1, c2, result);
	cout << "Result (add): "; result.printComplex();
	result = result.subComplex(c1, c2, result);
	cout << "Result (sub): ";  result.printComplex();
	cout << "\nPlease enter a number (multiply): " << endl;
	cin >> mpl;
	result = result.multiplyComplex(c1, result, mpl);
	cout << "Result (multiply): ";	result.printComplex();
	cout << "\nPlease enter a number (div): " << endl;
	cin >> div;
	result = result.divComplex(c1, result, div);
	cout << "Result (div): ";  result.printComplex();
	system("pause");
	return 0;
}
