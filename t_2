#include <iostream>

using namespace std;

class Complex
{
private:
	float real;
	float imaginary;
public:
	Complex() : real(0), imaginary(0)
	{}

	Complex(float rl, float img) : real(rl), imaginary(img)
	{}

	void getComplex();

	void printComplex();

	Complex addComplex(Complex c2) const;

	Complex subComplex(Complex c2) const;

	Complex multiplyComplex(int mpl) const;

	Complex divComplex(int div) const;
};

void Complex::getComplex()
{
	cout << "Please enter the real part of a complex number:" << endl;
	cin >> real;
	cout << "Please enter the imaginary part of a complex number:" << endl;
	cin >> imaginary;
	cout << endl;
}

void Complex::printComplex()
{
	if (imaginary < 0)
	{
		cout << real << imaginary << "i" << endl;
	}
	else
		cout << real << "+" << imaginary << "i" << endl;
}

Complex Complex::addComplex(Complex c2) const
{
	Complex result(real + c2.real, imaginary + c2.imaginary);
	return result;
}

Complex Complex::subComplex(Complex c2) const
{
	Complex result(real - c2.real, imaginary - c2.imaginary);
	return result;
}

Complex Complex::multiplyComplex(int mpl) const
{
	Complex result(real*mpl, imaginary*mpl);
	return result;
}

Complex Complex::divComplex(int div) const
{
	Complex result(real / div, imaginary / div);
	return result;
}

int main()
{
	Complex c1, c2, result;
	int mpl, div;
	c1.getComplex();
	c2.getComplex();
	result = c1.addComplex(c2);
	cout << "Result (add): "; result.printComplex();
	result = c1.subComplex(c2);
	cout << "Result (sub): "; result.printComplex();
	cout << "\nPlease enter a number (multiply): " << endl;
	cin >> mpl;
	result = c1.multiplyComplex(mpl);
	cout << "Result (multiply): ";	result.printComplex();
	cout << "\nPlease enter a number (div): " << endl;
	cin >> div;
	result = c1.divComplex(div);
	cout << "Result (div): ";  result.printComplex();
	system("pause");
	return 0;
}
