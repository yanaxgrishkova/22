#include <iostream>

using namespace std;

class Complex{
private:
	float real;
	float imaginary;
public:
	Complex() : real(0), imaginary(0)
	{}

	Complex(float rl, float img) : real(rl), imaginary(img) 
	{}

	~Complex()
	{}

	void getComplex()
	{
		cout << "Please, enter real part of complex number:" << endl;
		cin >> real;
		cout << "Please, enter imaginary part of complex number:" << endl;
		cin >> imaginary;
		cout << endl;
	}

	void addComplex(Complex c1, Complex c2, Complex c3)
	{
		c3.real = c1.real + c2.real;
		c3.imaginary = c1.imaginary + c2.imaginary;
		cout << "Result (add):\t" << c3.real << "+" << c3.imaginary << "i" << endl;
	}

	void subComplex(Complex c1, Complex c2, Complex c3)
	{
		c3.real = c1.real - c2.real;
		c3.imaginary = c1.imaginary - c2.imaginary;
		if (c1.imaginary > c2.imaginary)
		{
			cout << "Result (sub):\t" << c3.real << "+" << c3.imaginary << "i" << endl;
		}
		else cout << "Result (sub):\t" << c3.real << c3.imaginary << "i" << endl;
	}

	void multiplyComplex(Complex c1, Complex c3, int mpl)
	{
		c3.real = c1.real*mpl;
		c3.imaginary = c1.imaginary*mpl;
		cout << "Result (multiply):\t" << c3.real << "+" << c3.imaginary << "i" << endl;
	}

	void divComplex(Complex c1, Complex c3, int div)
	{
		c3.real = c1.real / div;
		c3.imaginary = c1.imaginary / div;
		cout << "Result (div):\t" << c3.real << "+" << c3.imaginary << "i" << endl;
	}
};

	int main()
	{
		Complex c1, c2, c3;
		int mpl, div;
		c1.getComplex();
		c2.getComplex();
		c3.addComplex(c1, c2, c3);
		c3.subComplex(c1, c2, c3);
		cout << "\n Please enter a number for multiplying:" << endl;
		cin >> mpl;
		c3.multiplyComplex(c1, c3, mpl);
		cout << "\n Please enter a number for division:" << endl;
		cin >> div;
		c3.divComplex(c1, c3, div);
		system("pause");
		return 0;
	}
